{
  "name": "bowery-capital",
  "version": "1.0.0",
  "description": "Bowery Capital Website",
  "main": "dev/js/index.js",
  "scripts": {
    "dev": "webpack --config webpack.dev.js -d --watch --watch-poll",
    "build": "standard --fix && lint-staged && webpack --config webpack.prod.js -p",
    "assets": "webpack --config webpack.assets.js -p && aws cloudfront create-invalidation --distribution-id E25X94KF5UN67Z --paths /main.min.js /css/styles.css",
    "test": "jest"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "jquery": "^3.4.1",
    "lazysizes": "^4.1.7",
    "slick-carousel": "^1.8.1"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "autoprefixer": "^9.4.3",
    "babel-loader": "^8.0.4",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^2.0.2",
    "expose-loader": "^0.7.3",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^3.0.1",
    "flipclock": "^0.10.0",
    "husky": "^1.2.1",
    "jquery-modal": "^0.9.1",
    "lint-staged": "^8.1.5",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.14.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.16.4",
    "sass-loader": "^7.1.0",
    "standard": "^12.0.1",
    "style-loader": "^0.23.1",
    "webpack": "^4.28.1",
    "webpack-assets-manifest": "^2.0.0",
    "webpack-cli": "^3.3.12",
    "webpack-livereload-plugin": "^2.1.1",
    "webpack-s3-uploader": "^1.3.1"
  },
  "standard": {
    "ignore": [
      "*.min.js",
      "/config/",
      "/storage/",
      "/templates/",
      "/vendor/",
      "/web/",
      "/node_modules/"
    ],
    "globals": [
      "$"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run-script build && lint-staged",
      "post-merge": "npm run-script build"
    }
  },
  "lint-staged": {
    "*.{scss,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "browserslist": [
    "last 1 version",
    "not dead",
    ">0.4% in my stats"
  ],
  "false": {}
}
